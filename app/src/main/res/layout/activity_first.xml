<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".FirstActivity">

    <!--<include layout="@layout/custom_toolbar" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"

        >
    <View
        android:layout_width="match_parent"
        android:layout_height="66dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/watch_icon" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ads"
        android:gravity="center"
        android:background="@drawable/border_background"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ads1container"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/inAppCardView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#0c0000"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >

            <TextView
                android:id="@+id/inAppTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Download more apps"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

    </android.support.v7.widget.CardView>


    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ads"
            android:gravity="center"
            android:background="@drawable/border_background"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ads2container"
            />
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    </LinearLayout>

</ScrollView>